<!-- Form handling -->
<form action="/api/items" method="POST" id="add_item">
  <div class="new_item">
    <div class="form-group">
      <label for="Name" class="text-light">Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="name" value="" placeholder="Ultraboost 22" />
    </div>
    <div class="form-group">
      <label for="Vendor" class="text-light">Vendor</label>
      <input type="text" name="vendor" value="" placeholder="Adidas" />
    </div>
    <div class="form-group">
      <label for="Size" class="text-light">Size</label>
      <input type="number" name="size" value="" placeholder="9" />
    </div>
    <div class="form-group">
      <label for="Color" class="text-light">Color</label>
      <input type="text" name="color" value="" placeholder="Black" />
    </div>
    <div class="form-group">
      <label for="Price" class="text-light">Price</label>
      <input type="number" name="price" value="" placeholder="150" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
<!-- /Form handling -->
