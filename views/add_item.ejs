    <!-- Header -->
    <header id="header">
      <nav>
        <div class="container">
          <div class="text-center">
            <a href="/" class="nav-brand text-dark"
              >Footwear Inventory Manager</a
            >
          </div>
        </div>
      </nav>
    </header>
    <!-- /Header -->

    <!-- Main Site -->
    <main id="site-main">
      <div class="container">
        <div class="box-nav d-flex justify-between">
          <div class="filter">
            <a href="/">
              <i class="fa-solid fa-angles-left"></i> To Inventory</a
            >
          </div>
        </div>
        <div class="form-title text-center">
          <h2 class="text-dark">New Item</h2>
          <span class="text-light">Use this form to enter a new item</span>
        </div>

        <!-- Form handling -->
        <%-include('include/_form') %>
