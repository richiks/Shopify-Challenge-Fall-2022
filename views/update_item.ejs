<!-- include header -->
<%-include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"> <i class="fa-solid fa-angles-left"></i> To Inventory</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Item</h2>
      <span class="text-light">Use this form to update an existing item</span>
    </div>
    <!-- Form handling -->
    <form method="POST" id="update_item">
      <div class="new_item">
        <div class="form-group">
          <label for="Name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= item._id %>" />
          <input
            type="text"
            name="name"
            value="<%= item.name %>"
            placeholder="Ultraboost 22"
          />
        </div>
        <div class="form-group">
          <label for="Vendor" class="text-light">Vendor</label>
          <input
            type="text"
            name="vendor"
            value="<%= item.vendor %>"
            placeholder="Adidas"
          />
        </div>
        <div class="form-group">
          <label for="Size" class="text-light">Size</label>
          <input
            type="number"
            name="size"
            value="<%= item.size %>"
            placeholder="9"
          />
        </div>
        <div class="form-group">
          <label for="Color" class="text-light">Color</label>
          <input
            type="text"
            name="color"
            value="<%= item.color %>"
            placeholder="Black"
          />
        </div>
        <div class="form-group">
          <label for="Price" class="text-light">Price</label>
          <input
            type="number"
            name="price"
            value="<%= item.price %>"
            placeholder="150"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
    <!-- /Form handling -->
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%-include('include/_footer') %>
<!-- /include footer -->
