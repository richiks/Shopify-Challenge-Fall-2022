<!-- include header -->
<%-include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <a href="/add-item" class="border-shadow">
        <span class="text-gradient">
          New Item <i class="fa-solid fa-shoe-prints"></i
        ></span>
      </a>
    </div>

    <!-- Form handling -->
    <form action="/" method="POST">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Vendor</th>
            <th>Size</th>
            <th>Color</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <%-include('include/_show') %>
        </tbody>
      </table>
    </form>
    <!-- /Form handling -->
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%-include('include/_footer') %>
<!-- /include footer -->
